apiVersion: batch/v1
kind: Job
metadata:
  name: kaniko-build-123456
  namespace: mlops
spec:
  backoffLimit: 0
  template:
    spec:
      restartPolicy: Never
      volumes:
        - name: workspace
          emptyDir: {}
        - name: docker-config
          secret:
            secretName: docker-config  # GHCR 도커 로그인 시 만든 dockerconfigjson 시크릿 이름
      initContainers:
        - name: check-src
          image: alpine:3.20
          command: ["/bin/sh","-c"]
          args:
            - |
              set -e
              if [ ! -f /workspace/Dockerfile.runtime ]; then
                echo "[ERROR] Missing /workspace/Dockerfile.runtime"
                exit 1
              fi
              echo "[check] /workspace/Dockerfile.runtime found OK"
          volumeMounts:
            - name: workspace
              mountPath: /workspace
      containers:
        - name: kaniko
          image: gcr.io/kaniko-project/executor:v1.23.0
          imagePullPolicy: IfNotPresent
          args:
            - --label=io.nac.buildkey=991a456fba573c70a34bb80d36d2be31494d3dd34c44021ab402027c300512b0
            - --context=/workspace
            - --dockerfile=/workspace/Dockerfile.runtime
            - --destination=ghcr.io/nacgyun/mlopsgit:runtime
            - --destination=ghcr.io/nacgyun/mlopsgit:runtime-f2a18438c59419597a9a269d3108ce516d6a229d
            - --cache=true
            - --cache-repo=ghcr.io/nacgyun/mlopsgit/cache
            - --verbosity=info
          volumeMounts:
            - name: docker-config
              mountPath: /kaniko/.docker/
            - name: workspace
              mountPath: /workspace

