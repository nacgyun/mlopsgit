apiVersion: batch/v1
kind: Job
metadata:
  name: __KANIKO_JOB_NAME__
  namespace: __NAMESPACE__
  labels:
    allow-egress-internet: "true"
spec:
  backoffLimit: 0
  template:
    metadata:
      labels:
        allow-egress-internet: "true"
    spec:
      restartPolicy: Never
      containers:
        - name: kaniko
          image: gcr.io/kaniko-project/executor:latest
          env:
            - name: DOCKER_CONFIG
              value: /kaniko/.docker
            - name: SSL_CERT_DIR
              value: /etc/ssl/certs
          args:
            # 공개 repo면 git context 그대로 사용 (특정 커밋)
            - --context=git://github.com/__GITHUB_OWNER__/__GITHUB_REPO__.git#__GIT_SHA__
            - --dockerfile=./Dockerfile.runtime
            - --destination=ghcr.io/__GITHUB_OWNER__/__GITHUB_REPO__:runtime-__BUILD_KEY__
            - --destination=ghcr.io/__GITHUB_OWNER__/__GITHUB_REPO__:sha-__GIT_SHA__
            - --snapshotMode=redo
            - --compressed-caching=false
            - --verbosity=info
          volumeMounts:
            - name: docker-config
              mountPath: /kaniko/.docker
              readOnly: true
      volumes:
        - name: docker-config
          secret:
            secretName: ghcr-push
            items:
              - key: config.json
                path: config.json

