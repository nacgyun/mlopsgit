apiVersion: batch/v1
kind: Job
metadata:
  # 기존 워크플로우가 KANIKO_JOB_NAME=kaniko-build 라면 그대로 둬도 OK
  name: kaniko-build
spec:
  backoffLimit: 0
  template:
    spec:
      restartPolicy: Never

      # 1) 소스 준비: 해당 커밋 tarball을 /workspace 에 풀기
      initContainers:
        - name: fetch-src
          image: alpine:3.20
          command: ["/bin/sh","-lc"]
          args:
            - |
              set -e
              apk add --no-cache curl tar >/dev/null
              mkdir -p /workspace
              echo "download source for __GIT_SHA__"
              curl -L -o /tmp/src.tgz "https://codeload.github.com/nacgyun/mlopsgit/tar.gz/__GIT_SHA__"
              tar -xzf /tmp/src.tgz -C /workspace --strip-components=1
              ls -al /workspace
          volumeMounts:
            - name: workspace
              mountPath: /workspace

      # 2) Kaniko build & push
      containers:
        - name: kaniko
          image: gcr.io/kaniko-project/executor:latest
          imagePullPolicy: IfNotPresent
          args:
            - --context=/workspace
            # ⬇️ 워크플로우에서 /workspace/Dockerfile.runtime 또는 /workspace/Dockerfile 로 치환
            - --dockerfile=__DOCKERFILE__
            - --destination=__IMAGE__
            # 캐시 사용(선택) — 레이어 재사용으로 빠르게
            - --cache=true
            - --cache-repo=ghcr.io/nacgyun/mlopsgit/cache
          volumeMounts:
            - name: docker-config
              mountPath: /kaniko/.docker/     # => /kaniko/.docker/config.json
            - name: workspace
              mountPath: /workspace

      volumes:
        - name: docker-config
          secret:
            secretName: ghcr-creds
            items:
              - key: .dockerconfigjson
                path: config.json
        - name: workspace
          emptyDir: {}

