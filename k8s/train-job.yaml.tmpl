apiVersion: batch/v1
kind: Job
metadata:
  name: train-job
  namespace: __NAMESPACE__
spec:
  backoffLimit: 0
  template:
    spec:
      restartPolicy: Never
      containers:
        - name: trainer
          image: __IMAGE__
          imagePullPolicy: IfNotPresent
          env:
            - name: GIT_SHA
              value: "__GIT_SHA__"
            # === MLflow 서버로 직접 기록 ===
            - name: MLFLOW_TRACKING_URI
              value: http://mlflow.mlops.svc.cluster.local:5000
            - name: MLFLOW_EXPERIMENT_NAME
              value: iris-rf
            # === MinIO를 아티팩트 스토리지로 쓸 때(옵션) ===
            - name: MLFLOW_S3_ENDPOINT_URL
              value: http://minio.mlops.svc.cluster.local:9000
            - name: AWS_ACCESS_KEY_ID
              valueFrom:
                secretKeyRef:
                  name: minio
                  key: accesskey
            - name: AWS_SECRET_ACCESS_KEY
              valueFrom:
                secretKeyRef:
                  name: minio
                  key: secretkey
          command: ["/bin/sh","-c"]
          args: |
            set -eux
            echo "[trainer] using SHA: __GIT_SHA__"
            python ml/train.py

