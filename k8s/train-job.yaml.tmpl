apiVersion: batch/v1
kind: Job
metadata:
  name: train-job
spec:
  backoffLimit: 0
  template:
    spec:
      restartPolicy: Never
      containers:
        - name: trainer
          image: __IMAGE__
          imagePullPolicy: IfNotPresent
          command: ["python","-u","train.py"]
          env:
            - name: GIT_SHA
              value: "__GIT_SHA__"
            - name: MLFLOW_TRACKING_URI
              value: "http://mlflow:5000"

